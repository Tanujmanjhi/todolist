<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>‚ú® Task Master Pro</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/animations.css">
</head>
<body class="animated-bg">
    <!-- Dynamic Welcome Header -->
    <header class="app-header glass floating">
        <div class="header-content">
            <div class="brand">
                <h1>‚ú® Task Master Pro</h1>
                <p class="subtitle"><%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %></p>
            </div>
            
            <div class="stats-grid">
                <div class="stat-card glass">
                    <span class="stat-icon">üìù</span>
                    <span class="stat-label">Total</span>
                    <span class="stat-value"><%= total %></span>
                </div>
                <div class="stat-card glass">
                    <span class="stat-icon">‚úÖ</span>
                    <span class="stat-label">Done</span>
                    <span class="stat-value"><%= completed %></span>
                </div>
                <div class="stat-card glass">
                    <span class="stat-icon">‚è≥</span>
                    <span class="stat-label">Pending</span>
                    <span class="stat-value"><%= total - completed %></span>
                </div>
            </div>
        </div>
        
        <button id="themeSwitch" class="theme-btn ripple" aria-label="Toggle theme">üåô</button>
    </header>

    <main class="container">
        <!-- Smart Action Bar -->
        <nav class="action-bar glass floating">
            <div class="search-wrapper glass">
                <form method="GET" action="/" class="smart-search">
                    <input type="search" name="search" 
                           placeholder="Search tasks..."
                           value="<%= req.query.search || '' %>"
                           autocomplete="off"
                    />
                    <button type="submit" class="icon-btn">üîç</button>
                </form>
            </div>

            <div class="view-controls">
                <div class="btn-group glass">
                    <a href="/" class="btn <%= !req.query.filter ? 'active' : '' %>">
                        <span class="btn-icon">üìã</span> All
                    </a>
                    <a href="/?filter=completed" class="btn <%= req.query.filter === 'completed' ? 'active' : '' %>">
                        <span class="btn-icon">‚úÖ</span> Done
                    </a>
                    <a href="/?filter=pending" class="btn <%= req.query.filter === 'pending' ? 'active' : '' %>">
                        <span class="btn-icon">‚è≥</span> Pending
                    </a>
                    <a href="/?filter=high" class="btn <%= req.query.filter === 'high' ? 'active' : '' %>">
                        <span class="btn-icon">üî¥</span> High Priority
                    </a>
                </div>

                <div class="btn-group glass">
                    <a href="/?sort=newest" class="btn <%= req.query.sort === 'newest' ? 'active' : '' %>">
                        <span class="btn-icon">üÜï</span> Newest
                    </a>
                    <a href="/?sort=priority" class="btn <%= req.query.sort === 'priority' ? 'active' : '' %>">
                        <span class="btn-icon">‚≠ê</span> Priority
                    </a>
                    <a href="/?sort=due" class="btn <%= req.query.sort === 'due' ? 'active' : '' %>">
                        <span class="btn-icon">üìÖ</span> Due Soon
                    </a>
                </div>
            </div>
        </nav>

        <!-- Quick Add Task -->
        <section class="quick-add glass floating">
            <form action="/add" method="POST" class="smart-form">
                <div class="form-grid">
                    <input type="text" name="text" 
                           placeholder="+ Add a new task..." 
                           required minlength="3" maxlength="50"
                           class="task-input glass"
                    />
                    
                    <input type="date" name="dueDate" 
                           class="date-input glass"
                           min="<%= new Date().toISOString().split('T')[0] %>"
                    />
                    
                    <select name="priority" class="priority-select glass">
                        <option value="Low">üü¢ Low</option>
                        <option value="Medium">üü° Medium</option>
                        <option value="High">üî¥ High</option>
                    </select>

                    <select name="category" class="category-select glass">
                        <option value="Work">üíº Work</option>
                        <option value="Home">üè† Home</option>
                        <option value="Important">‚≠ê Important</option>
                    </select>

                    <button type="submit" class="submit-btn glass">
                        Add Task ‚ú®
                    </button>
                </div>
            </form>

            <% if (req.query.error) { %>
                <div class="alert alert-error glass fade-in">
                    <span class="alert-icon">‚ö†Ô∏è</span>
                    <%= {
                        empty: "Task cannot be empty!",
                        short: "Task needs at least 3 characters",
                        long: "Task is too detailed (max 50 chars)"
                    }[req.query.error] %>
                </div>
            <% } %>
        </section>

        <!-- Task List -->
        <section class="tasks-wrapper">
            <ul class="task-grid">
                <% todos.forEach(todo => { %>
                <li class="task-card glass <%= todo.completed ? 'completed' : '' %> 
                           priority-<%= todo.priority.toLowerCase() %> animate-in">
                    <div class="task-header">
                        <h3 class="task-title"><%= todo.text %></h3>
                        <div class="task-badges">
                            <span class="badge <%= todo.priority.toLowerCase() %>">
                                <%= ['üî¥', 'üü°', 'üü¢'][['High', 'Medium', 'Low'].indexOf(todo.priority)] %>
                            </span>
                            <span class="badge category">
                                <%= {'Work': 'üíº', 'Home': 'üè†', 'Important': '‚≠ê'}[todo.category] %>
                            </span>
                        </div>
                    </div>

                    <div class="task-details">
                        <% if (todo.dueDate) { %>
                            <time class="due-date <%= new Date(todo.dueDate) < new Date() && !todo.completed ? 'overdue' : '' %>">
                                üìÖ <%= new Date(todo.dueDate).toLocaleDateString() %>
                            </time>
                        <% } %>
                        
                        <span class="status <%= todo.completed ? 'done' : 'pending' %>">
                            <%= todo.completed ? "‚úÖ Completed" : "‚è≥ In Progress" %>
                        </span>
                    </div>

                    <div class="task-actions">
                        <form action="/toggle/<%= todo._id %>?_method=PUT" method="POST" class="action-form">
                            <button type="submit" class="icon-btn toggle">
                                <%= todo.completed ? '‚Ü©Ô∏è' : '‚úÖ' %>
                            </button>
                        </form>

                        <form action="/update/<%= todo._id %>?_method=PUT" method="POST" class="action-form edit">
                            <input type="text" name="text" value="<%= todo.text %>" class="edit-input glass" />
                            <button type="submit" class="icon-btn update">‚úèÔ∏è</button>
                        </form>

                        <form action="/delete/<%= todo._id %>?_method=DELETE" method="POST" class="action-form">
                            <button type="submit" class="icon-btn delete">üóëÔ∏è</button>
                        </form>
                    </div>
                </li>
                <% }) %>
            </ul>
        </section>

        <!-- Smart Pagination -->
        <nav class="pagination glass floating" aria-label="Page navigation">
            <% if (page > 1) { %>
                <a href="/?page=<%= page - 1 %><%= req.query.filter ? `&filter=${req.query.filter}` : '' %>" 
                   class="page-btn glass">
                    ‚Üê Previous
                </a>
            <% } %>
            
            <span class="page-info glass">
                Page <%= page %> of <%= totalPages %>
            </span>
            
            <% if (page < totalPages) { %>
                <a href="/?page=<%= page + 1 %><%= req.query.filter ? `&filter=${req.query.filter}` : '' %>" 
                   class="page-btn glass">
                    Next ‚Üí
                </a>
            <% } %>
        </nav>
    </main>

    <script src="/theme.js"></script>
    <script src="/animations.js"></script>
</body>
</html>